<!DOCTYPE html>
<html>
<head>
  <title>FoodBase</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>

</head>
<body class='<%=controller.controller_name%>'>

    <div id="main-container" class="container-fluid">

  	  <%= render "shared/navbar" %>

      <div class="row">
       
          
            <div id="sidebar" class="col-xs-2">
             <!-- sidebar content -->
              <div class="panel panel-default">
                <div class="panel-body">
                  <% if lookup_context.find_all(controller.controller_name+"/_side").any? %>
                    <%= render 'side' %>
                  <% end %>
                </div>
              </div>
            </div>
      
      

        <div id="content" class="col-xs-7">
         	<%= yield %>
        </div>
        <div id="sidebar-right" class="col-xs-2">
           <div class="panel panel-default">
                <div class="panel-body">
                  <% if lookup_context.find_all(controller.controller_name+"/_side_right").any? %>
                    <%= render 'side_right' %>
                  <% end %>
                </div>
              </div>
        </div>
      </div>

    </div>
</body>
</html>
