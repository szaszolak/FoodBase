<!DOCTYPE html>
<html>
<head>
  <title>FoodBase</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>

</head>
<body class='<%=controller.controller_name%>'>

    <div id="main-container" class="container-fluid">
      <%if user_signed_in? %>
    	  <%= render "shared/navbar" %>
      <%end%>
      <div class="row">
       
      
            <div id="sidebar" class="col-sm-2">
            <% if lookup_context.find_all(controller.controller_name+"/_side").any? %>
             <!-- sidebar content -->
              <div class="panel panel-default">
                <div class="panel-body">
                  
                    <%= render 'side' %>
                 
                </div>
              </div>
              <% end %>
            </div>
       
      

        <div id="content" class="col-sm-8">
         	<%= yield %>
        </div>
        <div id='sidebar-right' class='col-sm-2'>

           <% if lookup_context.find_all(controller.controller_name+"/"+"_"+action_name+"_side_right").any? %>
                       <div class="panel panel-default">
                          <div class="panel-body">
                              <%= render action_name+"_side_right" %>
                           
                          </div>
                        </div>
            <% end %>
        </div>
       
    </div>
</body>
</html>
