<p id="notice"><%= notice %></p>

<h1>Listing Additives</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @additives.each do |additive| %>
      <tr>
        <td><%= additive.name %></td>
        <td><%= link_to 'Show', additive %></td>
        <td><%= link_to 'Edit', edit_additive_path(additive) %></td>
        <td><%= link_to 'Destroy', additive, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Additive', new_additive_path %>
