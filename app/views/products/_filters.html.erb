<%= form_tag("/products", method: "get",class:"form-inline",:remote=>true) do %>
 <div class="form-group">
  <%= label_tag("Produkty:") %>
  <%= collection_select(nil,:category_id, Category.all, :id, :name,{prompt: "Produkt"},class:"form-control") %> 
  </div>
   <div class="form-group">
  <%= label_tag("Składnik:") %>
  <%= collection_select(nil,:ingredient_id, Ingredient.all, :id, :name,{prompt: "Składnik"},class:"form-control") %>
  </div>
  <%= submit_tag("Filtruj", class:"btn btn-default") %>
<% end %>